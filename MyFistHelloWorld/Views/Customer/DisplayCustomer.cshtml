@model MyFistHelloWorld.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>DisplayCustomer</title>
</head>
<body>
    <div>
        El código del cliente es @Model.Code<br/>
        El nombre del cliente es @Model.Name<br/>
        @if (@Model.Amount > 100)
        {
            <p>Este cliente es privilegiado</p>
        }
        else
        {
            <p>Este cliente es normal</p>
        }

    </div>
</body>
</html>